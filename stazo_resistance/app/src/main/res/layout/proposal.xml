<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joe, propose a Mission!"
        android:id="@+id/proposeMission"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need # more agents"
        android:id="@+id/membersNeeded"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:id="@+id/scrollView2"
        android:layout_gravity="center"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p1"
                android:id="@+id/pButton1"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p2"
                android:id="@+id/pButton2"
                android:layout_below="@id/pButton1"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p3"
                android:id="@+id/pButton3"
                android:layout_below="@id/pButton2"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p4"
                android:id="@+id/pButton4"
                android:layout_below="@id/pButton3"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p5"
                android:id="@+id/pButton5"
                android:layout_below="@id/pButton4"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p6"
                android:id="@+id/pButton6"
                android:layout_below="@id/pButton5"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p7"
                android:id="@+id/pButton7"
                android:layout_below="@id/pButton6"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p8"
                android:id="@+id/pButton8"
                android:layout_below="@id/pButton7"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p9"
                android:id="@+id/pButton9"
                android:layout_below="@id/pButton8"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="@dimen/player_button_height"
                android:text="p10"
                android:id="@+id/pButton10"
                android:layout_below="@id/pButton9"
                android:onClick="togglePlayer"
                android:background="@drawable/player_button"/>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/Done"
        android:layout_gravity="center"
        android:onClick = "done"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>