<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.isaacwang.stazo_resistance">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".Resistance"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-sdk android:minSdkVersion="7"/>
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NameEntry"
            android:windowSoftInputMode="stateVisible" ></activity>
        <activity android:name=".RoleRevealActivity"></activity>
        <activity android:name=".HowToPlay"
            android:label="How To Play"></activity>
        <activity android:name=".GameOver"></activity>
        <activity android:name=".Approval"></activity>
        <activity android:name=".Sabotage"></activity>
        <activity android:name=".Proposal"></activity>
        <activity android:name=".MissionPassTho"></activity>
    </application>


</manifest>
